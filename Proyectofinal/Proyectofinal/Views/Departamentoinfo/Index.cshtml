@model IEnumerable<Proyectofinal.Models.Departamento>

@{
    ViewBag.Title = "departamento";
}

<h2>departamento</h2>

@using (Html.BeginForm())
{
    <p>
        Buscador: @Html.TextBox("departamento")
        <input type="submit" value="buscar">
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoDepatamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDepatamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
         
        </tr>
    }

</table>
