                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Nomina", "Index", "Nominas")</li>
                            <li>@Html.ActionLink("permiso", "Index", "permisos")</li>
                            <li>@Html.ActionLink("Licencias", "Index", "Licencias")</li>
                            <li>@Html.ActionLink("salida", "index", "salidas")</li>
                            <li>@Html.ActionLink("vacaciones", "Index", "vacaciones")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Informes
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("activo", "index", "activos")</li>
                            <li>@Html.ActionLink("inactivo", "Index", "inactivos")</li>
                            <li>@Html.ActionLink("Cargo", "Index", "CargoInfo")</li>
                            <li>@Html.ActionLink("Departamento", "Index", "Departamentoinfo")</li>
                            <li>@Html.ActionLink("Nomina", "Index", "Nominas")</li>
                            <li>@Html.ActionLink("permiso", "Index", "permisoinfo")</li>
                            <li>@Html.ActionLink("Salida", "Index", "SalidaInfo")</li>
                            <li>@Html.ActionLink("Entrada", "Index", "EntradaInfo")</li>
                            
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
